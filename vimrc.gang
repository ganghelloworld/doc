syntax on
set nu
set autoindent
set smartindent
set tabstop=4
set softtabstop=4
set shiftwidth=4
set autoindent
set cindent
set cinoptions={0,1s,t0,n-2,p2s,(03s,=.5s,>1s,=1s,:1s
set hlsearch
set incsearch
set fileencodings=utf-8,gbk
if &term=="xterm"
	set t_Co=8
	set t_Sb=^[[4%dm
